\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemeUB}[2016/07/05 v1.0.0 The UB Beamer Theme]

%----------------------------------------------------------------------------------------------------------------------------------
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamertemplate{navigation symbols}{} %Removes the navigation hyperlinks that generaly appear in the bottom right corner

\AtBeginSection[]
{
	\begin{frame}<beamer>
		\frametitle{Outline}
		\tableofcontents[ 
		currentsection, 
		sectionstyle=show/shaded,
		subsectionstyle=hide/hide
		] 
	\end{frame}
}

%----------------------------------------------------------------------------------------------------------------------------------
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\mode<presentation> 
{
	\useinnertheme{UB}
	\useoutertheme{UB}
	\usecolortheme{UB}
	\usefonttheme{UB}
}

\mode<all>

