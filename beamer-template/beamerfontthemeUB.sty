%\RequirePackage{avant}  % Loads the helvetica font for the normal texts

%----------------------------------------------------------------------------------------------------------------------------------

\mode<presentation>
{

	% Uses the Times fomt for the math sections

		\usefonttheme[onlymath]{serif} 

	% Fonts for the titleframe
	
	\setbeamerfont{title}{family={\fontfamily{serif}}, series=\bfseries, size = \LARGE} 
	\setbeamerfont{author}{family=\rmfamily, size = \large}
	\setbeamerfont{institute}{family=\rmfamily, size = \tiny}
	\setbeamerfont{date}{family=\rmfamily, size = \tiny}

	% Fonts for the table of contents
	
	\setbeamerfont{section in toc}{size=\large, family=\rmfamily, shape=\bf}
	
	% Font for the frame titles
	
	\setbeamerfont{frametitle}{family=\rmfamily, series=\bfseries, size = \LARGE} 

	% Font for the footline
	
	\setbeamerfont{page}{family=\rmfamily, size = \scriptsize}
	
	% Fonts for the blocks

	\setbeamerfont{block title}{family=\rmfamily, shape=\bf}

}

\mode
<all>
