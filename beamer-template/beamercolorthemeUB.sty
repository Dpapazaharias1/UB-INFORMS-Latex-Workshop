\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemeUB}[2016/07/05 v1.0.0 The UB Beamer Color Theme]

%----------------------------------------------------------------------------------------------------------------------------------
\mode<presentation>
{
	% Main colors
	
	\definecolor{UBBlue}{RGB}{0,91,187}
	\definecolor{UBWhite}{RGB}{255,255,255}
	\definecolor{UBGray}{RGB}{228,228,228}

	% Alerted text
	
	\setbeamercolor{alerted text}{fg=red}
	
	% Color of the icons/numbers in both the itemize and enumerate lists

	\setbeamercolor{item}{fg=UBBlue}

	% Colors of the table of contents 
	
	\setbeamercolor{section in toc}{fg=UBBlue}
	\setbeamercolor{subsection in toc}{fg=black}

	% colors of the frames'  titles
	
	\setbeamercolor{frametitle}{fg=UBBlue,bg=UBWhite}

	% Colors for the block sections
	
	\setbeamercolor{block title}{use=structure,fg=white,bg=UBBlue}
	\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!75!black}
	\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!75!black}

	\setbeamercolor{block body}{parent=normal text,use=block title,bg=UBGray}
	\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=UBGray}
	\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=UBGray}

}
\mode
<all>
