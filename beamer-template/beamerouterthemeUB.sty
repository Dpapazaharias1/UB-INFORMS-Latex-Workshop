\pgfdeclareimage[width=\paperwidth]{waterMark}{./logos/frameUB}

%----------------------------------------------------------------------------------------------------------------------------------

%----------------------------------------------------------------------------------------------------------------------------------

% beamer specific options

\mode<presentation> %refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
	
	%----------------------------------------------------------------------------------------------------------------------------------
	
	% Head
	\defbeamertemplate*{headline}{UB theme}
	{%
		\leavevmode%
		\begin{picture}(0,0)
			\put(0,-27){\pgfuseimage{waterMark}}
		\end{picture} %
		\vskip 1.3cm %
	}

	%----------------------------------------------------------------------------------------------------------------------------------

	% frame title
	\setbeamertemplate{frametitle}
	{ %
			\usebeamercolor[fg]{frametitle}\usebeamerfont{frametitle}\insertframetitle \par%
			\vskip 0.3cm %
	}

	%----------------------------------------------------------------------------------------------------------------------------------
	%line
		
		\definecolor{BPoint}{RGB}{228,228,228}
		\definecolor{Putnam}{RGB}{102,102,102}
		\defbeamertemplate*{footline}{pagenum}
	{%
		\hspace{0.265\textwidth}\textcolor{Putnam}{}
		\hfill%
		\usebeamercolor[UBBlue]{page}\usebeamerfont{page}\insertpagenumber\,/\,\insertpresentationendpage\kern1em\vskip2pt%
		
	}


	  

}
\mode
<all>
